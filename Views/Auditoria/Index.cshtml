@model List<SistemaAuditoria.Models.Auditoria>
@{
    ViewBag.Title = "Auditorías";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Asegúrate de tener este layout
}

@section Styles {
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f4f6f9;
            margin: 0;
        }

       



        .main-content {
            margin-left: 230px;
            padding: 40px 30px;
            transition: margin-left 0.3s;
        }

        .table-hover tbody tr:hover {
            background-color: #e9ecef;
        }

        .btn {
            transition: 0.2s ease-in-out;
        }

            .btn:hover {
                transform: scale(1.05);
            }

        h2 {
            font-weight: 600;
            margin-bottom: 20px;
        }
    </style>
}


<div class="main-content">
    <h2>Auditorías</h2>

    <div class="mb-3">
        <a href="@Url.Action("Crear", "Auditoria")" class="btn btn-primary">+ Nueva Auditoría</a>
        <a href="@Url.Action("ExportarExcel", "Auditoria")" class="btn btn-success ms-2">Exportar a Excel</a>
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Proceso</th>
                <th>Marco Normativo</th>
                <th>Nivel CMMI</th>
                <th>Comentario</th>
                <th>Fecha</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.NombreProceso</td>
                    <td>@item.MarcoNormativo</td>
                    <td>@item.NivelCMMI</td>
                    <td>@item.Comentario</td>
                    <td>@item.FechaRegistro.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
</div>
