<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - Sistema de Auditoría</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            background-color: #f4f6f9;
        }

        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            width: 220px;
            height: 100vh;
            background-color: #2c3e50;
            color: white;
            padding-top: 20px;
            transition: width 0.3s ease;
            z-index: 1000;
        }

            .sidebar.collapsed {
                width: 60px;
            }

            .sidebar .nav-link {
                color: white;
                font-size: 16px;
                padding: 12px 20px;
                display: block;
                transition: background 0.2s;
            }

                .sidebar .nav-link:hover {
                    background-color: #34495e;
                }

        .main-content {
            margin-left: 220px;
            padding: 20px;
            transition: margin-left 0.3s ease;
        }

        .sidebar.collapsed + .main-content {
            margin-left: 60px;
        }

        .toggle-btn {
            background: none;
            border: none;
            color: white;
            margin-left: 15px;
            font-size: 20px;
        }

        footer {
            margin-top: 40px;
            text-align: center;
            color: #888;
        }
    </style>
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="sidebar" id="sidebar">
        <button class="toggle-btn" onclick="toggleSidebar()">
            <i class="fas fa-bars"></i>
        </button>
        <hr style="color: #7f8c8d;" />
        <a class="nav-link" href="~/Home/Index">Inicio</a>
        <a class="nav-link" href="~/Auditoria/Crear">Auditorías</a>
        <a class="nav-link" href="~/Auditoria/Index">Reportes</a>
        <a class="nav-link" href="~/Home/Recomendaciones">Recomendaciones </a>
        <a class="nav-link" href="#">Grafico</a>
    </div>

    <div class="main-content" id="main">
        @RenderBody()
        <footer>
            <p>&copy; @DateTime.Now.Year - Sistema de Auditoría</p>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function toggleSidebar() {
            document.getElementById("sidebar").classList.toggle("collapsed");
            document.getElementById("main").classList.toggle("collapsed");
        }
    </script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
